<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/gradiant_background"
    android:padding="20dp"
    >
    <TimePicker
        android:id="@+id/time_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Label"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/milky_white"
            android:outlineProvider="paddedBounds"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:layout_weight="1"
            />
        <Spinner
            android:id="@+id/dd_alarmType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Attributes"
        android:textSize="60dp"
        android:textColor="@color/milky_white"
        android:fontFamily="@font/arizonia"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp"
        >
        <CheckedTextView
            android:id="@+id/ctv_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Important"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_wake_me_up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wake me up"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
    </LinearLayout>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat"
        android:textSize="60dp"
        android:textColor="@color/milky_white"
        android:fontFamily="@font/arizonia"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp"
        >
        <CheckedTextView
            android:id="@+id/ctv_sunday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sunday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_monday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_wednesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_thursday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thursday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_friday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Friday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
        <CheckedTextView
            android:id="@+id/ctv_saturday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saturday"
            android:checked="true"
            android:gravity="center"
            android:textColor="@color/milky_white"
            android:textSize="20sp"
            android:checkMark="@null"
            android:drawableLeft="?android:attr/listChoiceIndicatorMultiple"
            />
    </LinearLayout>
</LinearLayout>